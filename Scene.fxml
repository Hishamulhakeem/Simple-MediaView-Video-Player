<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.media.MediaView?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <center>
      <AnchorPane prefHeight="356.0" prefWidth="500.0" styleClass="pa" stylesheets="@application.css" BorderPane.alignment="CENTER">
         <children>
            <MediaView fx:id="mediaView" fitHeight="300.0" fitWidth="500.0" />
            <Button fx:id="playButton" layoutX="77.0" layoutY="300.0" mnemonicParsing="false" onAction="#playMedia" styleClass="bu" stylesheets="@application.css" text="PLAY" />
            <Button fx:id="pauseButton" layoutX="216.0" layoutY="300.0" mnemonicParsing="false" onAction="#pauseMedia" styleClass="bu" stylesheets="@application.css" text="PAUSE" />
            <Button fx:id="resetButton" layoutX="374.0" layoutY="300.0" mnemonicParsing="false" onAction="#restMedia" styleClass="bu" stylesheets="@application.css" text="RESET" textFill="WHITE" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
